<header class="header">
	<div>
		{{> logo}}
	</div>

	<nav class="header_nav">
		<div class="header_nav_right">
		    {{> nav list=header}}
		</div>
	</nav>
</header>

{{#with main}}
<main class="main">
	<img src="{{image}}" alt="Main image" class="main_image">
	<div class="main_content">
		<h1 class="main_title">{{heading}}</h1>
		<p class="main_text">{{descriotion}}</p>
		<a href="{{href}}" class="button main_button">{{button}}</a>
	</div>
</main>
{{/with}}

<div class="blog">
	{{#each featured}}

	<div class="card">
		<div class="card_content">
			<img class="card_image" src="{{photo}}" alt="card image">
			<h2 class="card_title"> {{heading}} </h2>
			<p class="card_text"> {{info}} </p>
		</div>
		<a href="{{linkUrl}}" class="card_link"> {{linkText}} </a>
	</div>

	{{/each}}
</div>


<div class="form">
	{{#each actions}}
	<div class="form_action">
		<h3 class="form_title">{{heading}}</h3>
		<a class="button form_button" href="{{url}}">{{text}}</a>
	</div>
	{{/each}}
</div>



<footer class="footer">
	<div>
		{{> logo}}
		<span class="footer_copyright">Copyright 2023-2024</span>
	</div>

	{{#each footer}}
	<div>
		<span class="footer_title">{{title}}</span>
		{{> nav list=links isVertical=true}}
	</div>
	{{/each}}
</footer>